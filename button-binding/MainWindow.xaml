<Window x:Class="button_binding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:button_binding"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="0,0,183,134">
        <Button x:Name="button0" Command="{Binding V.Button0.DelegateClick}" Content="{Binding V.Button0.Content}" HorizontalAlignment="Left" Margin="112,82,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button1" Command="{Binding V.Button1.DelegateClick}" Content="{Binding V.Button1.Content}" HorizontalAlignment="Left" Margin="112,134,0,0" VerticalAlignment="Top" Width="75"/>
        <ToggleButton Name="button2" IsChecked="{Binding V.Button2.On, Mode=OneWayToSource}" Content="{Binding V.Button2.Content}" HorizontalAlignment="Left" Margin="213,134,0,0" VerticalAlignment="Top"/>
        <Button Content="MODEL" Command="{Binding VM.Button2.Push}" HorizontalAlignment="Left" Margin="273,86,-14,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
